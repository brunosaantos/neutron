{
	"fileExtension": ".hbs",
	"encode": "utf8",
	"language": "en",
	"menuBehavior": "default",
	"cssTheme": "default",
	"defaultLayoutName": "application",
	"htmlComments": true,
	"beautifyHTML": true,
	"paths": {
		"core": {
			"root": "./core/",
			"templates": "./core/modules/templates/",
			"helpers": "./core/modules/helpers/"
		},
		"libs": {
			"root": "./core/libs/"
		},
		"src": {
			"root": "./src/",
			"assets": "./src/assets/",
			"data": "./src/data/",
			"layouts": "./src/layouts/",
			"patterns": "./src/patterns/"
		},
		"public": {
			"root": "./public/",
			"assets": "./public/assets/",
			"data": "./public/data/",
			"images": "./public/images/",
			"markups": "./public/markups/",
			"patterns": "./public/patterns/",
			"styleguides": "./public/styleguide/"
		}
	},
	"http": {
		"root": "/",
		"markups": "/markups/",
		"patterns": "/patterns/"
	}
}
