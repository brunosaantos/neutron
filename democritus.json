{
	"fileExtension": ".handlebars",
	"encode": "utf8",
	"defaultLayoutName": "application",
	"paths": {
		"core": {
			"root": "./core/",
			"templates": "./core/modules/templates/"
		},
		"libs": {
			"root": "./libs/"
		},
		"src": {
			"root": "./src/",
			"css": "./src/css/",
			"data": "./src/data/",
			"layouts": "./src/layouts/",
			"patterns": "./src/patterns/"
		},
		"public": {
			"root": "./public/",
			"data": "./public/data/",
			"markups": "./public/markups/",
			"patterns": "./public/patterns/",
			"styleguides": "./public/styleguide/"
		}

	},
	"http": {
		"root": "/",
		"markups": "/markups/",
		"patterns": "/patterns/"
	}
}
