{
	"fileExtension": ".handlebars",
	"encode": "utf8",
	"defaultLayoutName": "application",
	"paths": {
		"core": {
			"root": "./core/",
			"templates": "./core/modules/templates/"
		},
		"src": {
			"root": "./src/",
			"data": "./src/data/",
			"patterns": "./src/patterns/",
			"layouts": "./src/layouts/"
		},
		"public": {
			"root": "./public/",
			"data": "./public/data/",
			"patterns": "./public/patterns/",
			"markups": "./public/markups/"
		}

	},
	"http": {
		"root": "/",
		"patterns": "/patterns/",
		"markups": "/markups/"
	}
}