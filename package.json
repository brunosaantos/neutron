{
  "name": "neutron",
  "version": "0.1.0",
  "description": "An atomic design based system!",
  "main": "index.js",
  "scripts": {
    "neutron:build": "node scripts/neutron --verbose",
    "neutron:watch": "chokidar src/{data,layouts,patterns}/** --command \"npm run neutron:build\" --verbose",
    "navigation:build": "node scripts/navigation",
    "navigation:watch": "chokidar core/modules/navigation/** --ignore \"/core\\/modules\\/navigation\\/js\\/templates.js/\" --command \"npm run navigation:build\" --verbose",
    "copy:build": "node scripts/copy",
    "copy:watch": "chokidar src/assets/** --ignore \"/src\\/assets\\/.keep/\" --command \"npm run copy:build\" --verbose",
    "start": "npm-run-all --continue-on-error *:build --parallel *:watch",
    "test": "npm-run-all --continue-on-error *:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vebersol/democritus.git"
  },
  "author": "Vin√≠cius Ebersol",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/vebersol/democritus/issues"
  },
  "homepage": "https://github.com/vebersol/democritus#readme",
  "dependencies": {
    "browser-sync": "^2.13.0",
    "del": "^2.2.0",
    "fs-extra": "^0.30.0",
    "handlebars": "^4.0.5",
    "html-escape": "^2.0.0",
    "marked": "^0.3.5",
    "object-merge": "^2.5.1",
    "sort-object": "^3.0.2",
    "browserify": "^14.3.0",
    "chokidar": "^1.7.0",
    "chokidar-cli": "^1.2.0",
    "js-beautify": "^1.6.4",
    "minifyify": "^7.3.5",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "universal-jst": "^1.0.5"
  }
}
